<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cardapio.CardapioFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="237dp"
                android:layout_height="295dp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/bg_umai_darker"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageCreme"
                    android:layout_width="match_parent"
                    android:layout_height="139sp"
                    android:src="@drawable/creme2" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:gravity="center"
                    android:text="Bebida cremosa temática personalizada"
                    android:textColor="#FFF" />

                <TextView
                    android:id="@+id/textViewCreme"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:text="R$ 25,00"
                    android:textColor="#FFF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonMinus2"
                        android:layout_width="10sp"
                        android:layout_height="35sp"
                        android:layout_weight="1"
                        android:text="-" />

                    <TextView
                        android:id="@+id/textCreme"
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#FFF" />

                    <Button
                        android:id="@+id/buttonPlus2"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/comprarCreme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comprar" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="237dp"
                android:layout_height="295dp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/bg_umai_darker"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageBatata"
                    android:layout_width="match_parent"
                    android:layout_height="139sp"
                    android:src="@drawable/batatas" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:gravity="center"
                    android:text="Batata frita com cheddar temática"
                    android:textColor="#FFF" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:text="R$ 18,00"
                    android:textColor="#FFF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonMinus4"
                        android:layout_width="10sp"
                        android:layout_height="35sp"
                        android:layout_weight="1"
                        android:text="-" />

                    <TextView
                        android:id="@+id/textBatata"
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#FFF" />

                    <Button
                        android:id="@+id/buttonPlus4"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/comprarBatata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comprar" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="237dp"
                android:layout_height="295dp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/bg_umai_darker"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageMorango"
                    android:layout_width="match_parent"
                    android:layout_height="139sp"
                    android:src="@drawable/cafe_cortado" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:gravity="center"
                    android:text="Bebida especial de morango"
                    android:textColor="#FFF" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:text="R$ 8,00"
                    android:textColor="#FFF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonMinus1"
                        android:layout_width="10sp"
                        android:layout_height="35sp"
                        android:layout_weight="1"
                        android:text="-" />

                    <TextView
                        android:id="@+id/textMorango"
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#FFF" />

                    <Button
                        android:id="@+id/buttonPlus1"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/comprarMorango"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comprar" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="237dp"
                android:layout_height="295dp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/bg_umai_darker"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageDocinho"
                    android:layout_width="match_parent"
                    android:layout_height="139sp"
                    android:src="@drawable/doces_anime" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:gravity="center"
                    android:text="Docinhos temáticos"
                    android:textColor="#FFF" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:text="R$ 17,00"
                    android:textColor="#FFF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonMinus3"
                        android:layout_width="10sp"
                        android:layout_height="35sp"
                        android:layout_weight="1"
                        android:text="-" />

                    <TextView
                        android:id="@+id/textDocinho"
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#FFF" />

                    <Button
                        android:id="@+id/buttonPlus3"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/comprarDocinho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comprar" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="237dp"
                android:layout_height="295dp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/bg_umai_darker"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imagePizza"
                    android:layout_width="match_parent"
                    android:layout_height="139sp"
                    android:src="@drawable/pizza" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:gravity="center"
                    android:text="Minipizza + talher personalizado"
                    android:textColor="#FFF" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:text="R$ 13,00"
                    android:textColor="#FFF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonMinus5"
                        android:layout_width="10sp"
                        android:layout_height="35sp"
                        android:layout_weight="1"
                        android:text="-" />

                    <TextView
                        android:id="@+id/textPizza"
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#FFF" />

                    <Button
                        android:id="@+id/buttonPlus5"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/comprarPizza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comprar" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>


